<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="197dp"
            android:layout_height="61dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:fontFamily="@font/pbold"
            android:gravity="center"
            android:text="Pos.in"
            android:textColor="#FFB000"
            android:textSize="40dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:textSize="30dp"
            android:fontFamily="@font/pmedium"
            android:text="Halo!"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginRight="100dp"
            android:fontFamily="@font/pmedium"
            android:text=".........."
            android:textColor="@android:color/black"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/preguler"
        android:textColor="@android:color/black"
        android:text="Silahkan pilih menu dibawah ini!"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true">
    </TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="245dp"
        android:layout_marginEnd="-1dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_add_data"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:fontFamily="@font/pmedium"
            android:text="Menambahkan Data"
            android:backgroundTint="#FFB000"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_display_data"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:fontFamily="@font/pmedium"
            android:backgroundTint="#FFB000"
            android:text="Menampilkan Data"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/pmedium"
        android:backgroundTint="#004225"
        android:textColor="@color/white"
        android:text="Logout"/>

</RelativeLayout>